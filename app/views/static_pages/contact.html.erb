<div class="contact-wrap">
  <div class="white-copy">
    <h1><strong>Say Hello!</strong></h1>
    <p class="white-copy">Feel free to give me a call or stop by for a cup of tea. On second thoughts, call first.</p>
  </div>

  <div class="contact-info col-lg-4 col-md-4">
    <p class="white-copy">Phone: +44 (0)7745463546<br/>
       Email: ppphahaha@hotmail.co.uk	
    </p>
  </div>


  <div class="container">
    <div class="row">
      <div class="contact-form col-lg-8 col-md-8">
        <%= form_with(url:"/static_pages/thank_you", method: "post", local: true) do |form| %>
          <div class="form-group">
            
            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
          </div>
          <div class="form-group">
            
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            
            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
          </div>
          <%= form.submit "Send", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>

  
  