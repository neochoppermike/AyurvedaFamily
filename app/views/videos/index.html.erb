<% if @videos.present? %>
  <div class="container index-wrap">
    <h1 class="videos-header">Video Archives</h1>
    <div class="row"> 
      <% @videos.each do |video| %> 
      <div class="col-md-6">
        <div class="post-date"><strong>Posted <%= video.created_at.strftime("%d %b %y") %></strong></div>

        <iframe width="500" height="350" src="<%= @video.url %>" frameborder="0" allowfullscreen></iframe>
        <h2><%= video.title %></h2> 
        <p><%= video.description %></p>
      </div>
      <% end %>
    </div>
    <%= link_to 'New Video', new_video_path %>
    
    
  </div>
<% else %>
  <p class="text-center">No results found</p>
  <%= link_to 'New Video', new_video_path %>
  
<% end %>
