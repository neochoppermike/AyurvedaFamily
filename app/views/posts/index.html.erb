<div class=container>
  <h1 class="posts-header">Blog Archives</h1>
  <div class="row"> 
  	<% @posts.each do |post| %> 
    <div class="col-md-6">
      <%= image_tag(post.image_url, class: "img-responsive") %>
      <h2><%= post.title %></h2>
      <div class="text-center">
        <%= link_to 'Read', post, class: "btn btn-primary" %>
      </div>  
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Post', new_post_path %>



